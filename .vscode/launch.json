    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Kafka.Cli/bin/Debug/net8.0/kafka-cli.dll",
            "args": ["producer", "--bootstrap-server", "localhost:9092", "--topic", "test", "--log-level", "trace", "--properties", "enable.idempotence=true"],
            "cwd": "${workspaceFolder}/src/Kafka.Cli",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}